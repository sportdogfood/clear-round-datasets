{
  "version": "1.2.5",
  "updated_iso": "2025-10-08T00:00:00-04:00",
  "id": "clearround_founder_firstperson_v1",
  "audience": [
    "competitive-rider",
    "trainer",
    "groom",
    "spectator_support",
    "equine-professional-services"
  ],
  "pov": {
    "person": "first",
    "persona": "Founder, Clear Round Travel",
    "credentials": "Wellington local • 20+ years in travel & equestrian sport • mom to a 14-year-old A-circuit rider",
    "core_message": "Focus on riding.\nWe'll handle the rest."
  },
  "voice": {
    "primary": "confident",
    "secondary": ["practical", "warm", "insider"],
    "character": "authoritative but approachable"
  },
  "style": {
    "register": "conversational-brochure",
    "imagery": "sensory but restrained",
    "sentence_tone": "short-to-medium; active voice",
    "vocabulary": "equestrian-literate; avoid jargon overload",
    "naming": {
      "venue_preferred_first": "Desert International Horse Park",
      "venue_abbrev": "DIHP",
      "rule": "first_mention_full_then_abbrev"
    },
    "spectator_tip": {
      "allowed": true,
      "max_sentences": 1,
      "tone": "practical and observant; no hype"
    }
  },
  "length_targets": {
    "intro": { "words_min": 110, "words_max": 180, "paragraphs": 1 },
    "section_overview": { "words_min": 50, "words_max": 90 },
    "item_blurb": { "words_min": 10, "words_max": 25 },
    "outro": { "words_min": 25, "words_max": 45 }
  },
  "tone_rules": {
    "do": [
      "Lead with rider-first clarity",
      "Use one local sensory detail in the lede",
      "Use insider terms sparingly and only when clear",
      "Offer one clear benefit sentence (no fee to you; we work with partners)",
      "Close with a single, specific CTA"
    ],
    "dont": [
      "Invent facts",
      "List ticket/parking procedures",
      "Repeat sentences across sections",
      "Overdo SEO phrasing or flowery prose"
    ]
  },
  "content_constraints": {
    "first_person_anchor": true,
    "disclosure": "(no fee to you; we work with partners)",
    "no_guessing": true,
    "forbid_phrases": [
      "rider-first scheduling",
      "hallmark money classes",
      "footing, timing, and polish match the standard"
    ]
  },
  "research": {
    "intro_requires": ["event_official_link", "venue_official_link"],
    "optional": ["geo_link"],
    "locale_requires": [],
    "fail_if_missing": true,
    "record_in_source_trace": true
  },
  "templates": {
    "intro_closing_patterns_link": "https://raw.githubusercontent.com/sportdogfood/clear-round-datasets/main/items/brand/intro_closing_patterns.json",
    "outro_templates_link": "https://raw.githubusercontent.com/sportdogfood/clear-round-datasets/main/items/brand/outro_templates.json",
    "cta_closers_library_link": "https://raw.githubusercontent.com/sportdogfood/clear-round-datasets/main/items/brand/cta_closers_library.json",
    "intro_outro_lockdown_link": "https://raw.githubusercontent.com/sportdogfood/clear-round-datasets/main/items/brand/intro-outro-lockdown.json"
  },
  "defaults": {
    "keywords_min": 3,
    "insiders_min": 2,
    "audience_reference_required": true
  }
}
