{
  "version": "1.0.2",
  "updated_iso": "2025-10-08T00:00:00-04:00",
  "id": "intro_outro_lockdown_v1",
  "purpose": "Constrain intro/outro to gold-standard style using *_link keys only.",
  "intro": {
    "enabled": true,
    "paragraphs": 1,
    "min_words": 110,
    "max_words": 180,
    "links_required": [
      "event_official_link",
      "venue_official_link"
    ],
    "must_cover": [
      "time_phrase",
      "season_phrase_only",
      "event_stature_hallmark_or_final",
      "venue_visual_flow_trait",
      "city_presence_phrase",
      "rider_caliber_ops_quality"
    ],
    "forbid": [
      "ticketing",
      "prices",
      "logistics_lists",
      "temperatures_or_ranges",
      "hotel_names",
      "restaurant_names"
    ],
    "research_sources": {
      "required": [
        "event_official_link",
        "venue_official_link"
      ],
      "optional": [
        "geo_link"
      ],
      "notes": "Use official pages; geo only for month/city naming."
    },
    "structure": "tell-write-tell"
  },
  "outro": {
    "enabled": true,
    "min_words": 25,
    "max_words": 45,
    "template_source": "items/brand/outro_templates.json",
    "selection": {
      "mode": "hash",
      "seed": "hub.core.event.uid",
      "algorithm": "fnv1a"
    }
  },
  "compliance": {
    "no_raw_urls_in_prose": true,
    "markdown_links_only": true
  },
  "naming": {
    "venue_preferred_first": "Desert International Horse Park",
    "venue_abbrev": "DIHP",
    "rule": "first_mention_full_then_abbrev",
    "notes": "Apply to generated prose only; never overwrite official names in data."
  }
}
