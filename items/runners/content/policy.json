{
  "version": "1.2.0",
  "updated_iso": "2025-10-16T00:00:00-04:00",
  "runner": "content-runner",
  "link_access": {
    "allow_from_task_links": true,
    "allow_base_uris": ["https://items.clearroundtravel.com"],
    "externals_display_only": true
  },
  "content_type": {
    "enforce": false,
    "treat_text_plain_as_json": true,
    "require_utf8": true,
    "reject_bom": true
  },
  "strict_mode": {
    "no_guessing": true,
    "fail_on_missing_url": true,
    "fail_on_missing_link": true,
    "fail_on_4xx_required_links": true
  },
  "fetch": {
    "response_length": "long",
    "retry_on_http_error": 1
  },
  "trace": {
    "collapse_success": true,
    "max_entries": 18,
    "fields": ["path", "status"],
    "required_order": [
      "task_uri",
      "policy",
      "schema",
      "rules",
      "audiences",
      "venue",
      "event",
      "geo",
      "section",
      "stay",
      "dine",
      "essentials",
      "patterns",
      "outros",
      "ctas",
      "libs_bundle",
      "content_write",
      "trigger_write"
    ]
  },
  "allowlist_policy": {
    "from_task_keys": ["*_link", "*_links[]"],
    "enforce_items_domain": true
  },
  "io_guards": {
    "min_bytes": 256,
    "images_must_be_http": true,
    "content_path_regex": "^items/content/[a-z0-9-]+-content-\\d{4}-\\d{2}-\\d{2}\\.json$",
    "trigger_path_regex": "^items/triggers/[a-z0-9-]+-trigger-\\d{4}-\\d{2}-\\d{2}\\.json$",
    "content_max_bytes": 262144,
    "trigger_max_bytes": 4096
  },
  "endpoints": {
    "reads": ["/items/{path}"],
    "writes": ["/items/commit-bulk"]
  },
  "commit_contract": {
    "overwrite": true,
    "files_required_per_commit": ">=1",
    "content_type_hint_optional": true
  }
}
