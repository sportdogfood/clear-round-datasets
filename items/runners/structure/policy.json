{
  "version": "20251015.light-locked",
  "notes": [
    "RUNNER-LIGHT policy: one trigger URL → GET content/event/[images] from items.clearroundtravel.com → build exactly two outputs (post index.html + *-publish.json) → single POST /docs/commit-bulk.",
    "Global artifacts (blogs index, year index, RSS, sitemap, manifest) are built by a scheduled indexer; runner does not write them.",
    "ADD-ONLY for content sources: never mutate *-blog*.json in items/; runner writes only under docs/blogs/.",
    "No mirrors and no raw.githubusercontent.com fetches; templates are read-only under blog.clearroundtravel.com/blogs/templates/."
  ],
  "mode": "runner_light",
  "hosts": {
    "allow": [
      "items.clearroundtravel.com",
      "blog.clearroundtravel.com"
    ]
  },
  "cors": {
    "allow_origins": [
      "https://airtable.com",
      "https://app.airtable.com",
      "https://console.airtable.com",
      "https://blog.clearroundtravel.com"
    ]
  },
  "allow_dirs": [
    "events","months","seasons","days","years","weeks","labels","places","sources","organizers","cities","countries","hotels","states","weather","airports","venues","restaurants","agents","dine","essentials","legs","distances","insiders","keywords","audience","tone","ratings","links","spots","sections","bullets","services","stay","amenities","slots","cuisines","menus","locale","things","tags","blogs","platforms","geos","timezones","geometry","chains","knowledge","levels","types","core","brand","meta","hubs","zones","seo","outputs","tasks","instructions","schema","gold","policy","docs","runners","images","assets"
  ],
  "templates": [
    "docs/blogs/templates/blog.index.html.tmpl",
    "docs/blogs/templates/blogs.index.html.tmpl",
    "docs/blogs/templates/year.index.html.tmpl",
    "docs/blogs/templates/rss.xml.tmpl",
    "docs/blogs/templates/sitemap.xml.tmpl"
  ],
  "write_guards": {
    "deny": [
      "**/*-blog-????-??-??.json",
      "**/*-blog.json"
    ],
    "allow": [
      "docs/blogs/*-blogs-[0-9][0-9][0-9][0-9]/*/index.html",
      "docs/blogs/*-blogs-[0-9][0-9][0-9][0-9]/*/*-publish-????-??-??.json",
      "docs/blogs/*-blogs-[0-9][0-9][0-9][0-9]/*/*-publish.json"
    ],
    "on_violation": "halt"
  },
  "required_outputs": [
    "PUBLISH_JSON",
    "POST_INDEX"
  ],
  "min_bytes": {
    "PUBLISH_JSON": 100,
    "POST_INDEX": 200
  },
  "defaults": {
    "canonical_base": "https://blog.clearroundtravel.com",
    "rss_item_limit": 20,
    "recent_count": 4,
    "timezone": "America/New_York"
  }
}
