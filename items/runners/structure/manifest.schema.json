{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://items.clearroundtravel.com/schema/blog-manifest.json",
  "title": "CRT Blog Manifest",
  "description": "Array of published blog entries surfaced at https://blog.clearroundtravel.com. Each item describes one public post, its folder path, and its canonical publish JSON.",
  "type": "array",
  "minItems": 0,
  "items": {
    "type": "object",
    "additionalProperties": true,
    "required": ["slug", "title", "date", "year", "path", "json", "venue"],
    "properties": {
      "slug": {
        "type": "string",
        "minLength": 3,
        "description": "Post slug (e.g., capc-cap-challenge-blog-2025-10-05)."
      },
      "title": {
        "type": "string",
        "minLength": 3,
        "description": "Human-readable title."
      },
      "date": {
        "type": "string",
        "description": "Post date (YYYY-MM-DD).",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "year": {
        "type": "string",
        "description": "4-digit year used for grouping (e.g., /blogs/2025/).",
        "pattern": "^\\d{4}$"
      },
      "path": {
        "type": "string",
        "description": "Public folder URL path (leading and trailing slash required). Example: /blogs/capc-blogs-2025/capc-blog-2025-10-05/",
        "pattern": "^/blogs/[^/]+-blogs-\\d{4}/[^/]+/$"
      },
      "json": {
        "type": "string",
        "description": "Public publish JSON path under the post folder. Must point to *-publish.json (optionally dated).",
        "pattern": "^/blogs/[^/]+-blogs-\\d{4}/[^/]+/[^/]+-publish(?:-\\d{4}-\\d{2}-\\d{2})?\\.json$"
      },
      "venue": {
        "type": "string",
        "minLength": 2,
        "description": "Venue display name (e.g., “Prince George’s Equestrian Center”)."
      },

      "canonical": {
        "type": "string",
        "format": "uri",
        "description": "Absolute canonical URL for the post page (e.g., https://blog.clearroundtravel.com/blogs/.../)."
      },
      "image": {
        "type": "string",
        "description": "Hero/card image URL (absolute or site-relative)."
      },

      "city": { "type": "string", "description": "City for the venue/event." },
      "state": { "type": "string", "description": "State/province code or name." },
      "country": { "type": "string", "description": "Country code or name." },
      "lat": { "type": "number", "description": "Latitude in WGS84." },
      "lng": { "type": "number", "description": "Longitude in WGS84." },
      "place_id": { "type": "string", "description": "Provider-specific place id (optional)." },
      "timezone": { "type": "string", "description": "IANA timezone (e.g., America/New_York)." },

      "start_date": {
        "type": "string",
        "description": "Event start date (YYYY-MM-DD).",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "end_date": {
        "type": "string",
        "description": "Event end date (YYYY-MM-DD).",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "event_duration": {
        "type": "string",
        "description": "High-level duration classification.",
        "enum": ["single", "weekend", "multi-day", "unknown"]
      },

      "month_num": {
        "type": "integer",
        "minimum": 1,
        "maximum": 12,
        "description": "Numeric month (1–12) derived from date."
      },
      "month_name": {
        "type": "string",
        "description": "Month name (e.g., October)."
      },
      "season": {
        "type": "string",
        "enum": ["Winter", "Spring", "Summer", "Fall"],
        "description": "Season classification for grouping."
      },

      "audience_labels": {
        "type": "array",
        "description": "Audience tags (e.g., competitive-rider).",
        "items": { "type": "string" }
      },
      "tags": {
        "type": "array",
        "description": "Keyword tags for site filtering.",
        "items": { "type": "string" }
      },

      "section_link": {
        "type": "string",
        "description": "Optional section/collection link relevant to the post."
      },
      "maps_link": {
        "type": "string",
        "description": "Optional external map link."
      },

      "brand": {
        "type": "string",
        "description": "Brand/site section for grouping (e.g., capc)."
      },
      "post_folder_slug": {
        "type": "string",
        "description": "Folder slug within the brand+year collection (e.g., capc-blog-2025-10-05)."
      }
    },
    "examples": [
      {
        "slug": "capc-cap-challenge-blog-2025-10-05",
        "title": "CAPC CAP: Challenge 2025",
        "date": "2025-10-05",
        "year": "2025",
        "path": "/blogs/capc-blogs-2025/capc-blog-2025-10-05/",
        "json": "/blogs/capc-blogs-2025/capc-blog-2025-10-05/capc-cap-challenge-publish.json",
        "venue": "Prince George’s Equestrian Center",
        "canonical": "https://blog.clearroundtravel.com/blogs/capc-blogs-2025/capc-blog-2025-10-05/",
        "city": "Upper Marlboro",
        "state": "MD",
        "country": "US",
        "season": "Fall",
        "tags": ["capital-challenge", "fall"],
        "audience_labels": ["competitive-rider"]
      }
    ]
  }
}
