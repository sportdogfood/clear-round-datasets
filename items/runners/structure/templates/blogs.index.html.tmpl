<!-- items/runners/structure/templates/blogs.index.html.tmpl -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Clear Round Travel — Blogs</title>
  <meta name="description" content="Browse all Clear Round Travel blogs by year and season." />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;margin:0;color:#111}
    header,main,footer{max-width:1100px;margin:0 auto;padding:16px}
    .years,.seasons{display:flex;flex-wrap:wrap;gap:8px;margin:8px 0}
    .chip{border:1px solid #ddd;border-radius:999px;padding:.35rem .7rem;text-decoration:none;color:#333}
    .section{margin:24px 0}
    .cards{display:grid;grid-template-columns:1fr;gap:16px}
    @media(min-width:700px){.cards{grid-template-columns:repeat(3,1fr)}}
    .card{border:1px solid #eee;border-radius:12px;overflow:hidden;background:#fff}
    .card a{color:inherit;text-decoration:none;display:block}
    .card img{width:100%;height:auto;display:block}
    .card .meta{padding:10px}
    .rail{display:flex;gap:12px;overflow:auto;padding-bottom:6px}
    .rail .card{min-width:260px;flex:0 0 auto}
  </style>
</head>
<body>
<header>
  <h1>Blogs</h1>
  <p>Latest posts, year archives, and seasonal picks.</p>
  <div class="years">{{year_links_html}}</div>
  <div class="seasons">{{season_filter_chips_html}}</div>
</header>

<main>
  <section class="section">
    <h2>Recent</h2>
    <div class="rail">
      {{recent_cards_html}}
      <!-- expected: <article class="card"><a href="{{path}}"><img src="{{image}}" alt=""><div class="meta"><h3>{{title}}</h3><div>{{date}} · {{venue}}</div></div></a></article> -->
    </div>
  </section>

  <section class="section">
    <h2>By Season</h2>
    {{season_carousels_html}}
    <!-- expected per season: <h3>Winter <a href="/blogs/?season=winter">see all ›</a></h3><div class="rail">…cards…</div> -->
  </section>

  <section class="section">
    <h2>All</h2>
    <div class="cards">
      {{all_cards_html}}
      <!-- optional full list -->
    </div>
  </section>
</main>

<footer>
  <small>© {{current_year}} Clear Round Travel</small>
</footer>
</body>
</html>
