<!-- items/runners/structure/templates/blog.index.html.tmpl -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{{title}}</title>
  <meta name="description" content="{{meta_description}}" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="canonical" href="{{canonical}}" />

  <!-- Open Graph -->
  <meta property="og:title" content="{{open_graph_title}}" />
  <meta property="og:description" content="{{open_graph_description}}" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="{{canonical}}" />
  <meta property="og:image" content="{{open_graph_image}}" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{open_graph_title}}" />
  <meta name="twitter:description" content="{{open_graph_description}}" />
  <meta name="twitter:image" content="{{open_graph_image}}" />
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;line-height:1.5;margin:0;color:#111}
    header,main,footer{max-width:960px;margin:0 auto;padding:16px}
    .eyebrow{color:#555;font-size:.9rem;margin:.5rem 0}
    .hero{margin:12px 0}
    .grid{display:grid;grid-template-columns:1fr;gap:16px}
    @media(min-width:800px){.grid{grid-template-columns:repeat(2,1fr)}}
    .tags{margin-top:16px}
    .tags a{display:inline-block;margin:.25rem .5rem .25rem 0;padding:.25rem .5rem;border:1px solid #ddd;border-radius:999px;text-decoration:none;color:#333}
    nav.pager{display:flex;justify-content:space-between;margin:24px 0}
    figure{margin:0}
    figcaption{font-size:.9rem;color:#555}
  </style>
</head>
<body>
<header>
  <a href="/blogs/">← All blogs</a>
  <h1>{{title}}</h1>
  <div class="eyebrow">
    <time datetime="{{date_iso}}">{{date_human}}</time>
    · <span>{{venue_label}}</span>
    <span class="sep">·</span>
    <span>{{event_month}} • {{event_season}}</span>
  </div>
</header>

<main>
  <section class="hero">
    {{hero_img}}
    <!-- expected: <figure><img src="/path.jpg" alt="{{image_alt_text}}" /><figcaption>{{image_caption}}</figcaption></figure> -->
  </section>

  <article>
    {{intro_html}}

    <div class="grid">
      <section>
        <h2>Stay</h2>
        {{stay_list_html}}
      </section>
      <section>
        <h2>Dine</h2>
        {{dine_list_html}}
      </section>
      <section>
        <h2>Essentials</h2>
        {{essentials_list_html}}
      </section>
      <section>
        <h2>Locale</h2>
        {{locale_html}}
      </section>
    </div>

    {{outro_html}}

    <div class="tags">
      {{tags_html}}
      <!-- expected: <a href="/blogs/?tag=fall">fall</a> … -->
    </div>
  </article>

  <nav class="pager">
    <div class="prev">{{prev_link}}</div>
    <div class="next">{{next_link}}</div>
    <!-- expected: <a href="/blogs/.../">← Previous</a> / <a href="/blogs/.../">Next →</a> -->
  </nav>

  {{json_ld}}
  <!-- optional: full JSON-LD block for Event/Article -->
</main>

<footer>
  <small>© {{year}} Clear Round Travel</small>
</footer>
</body>
</html>
