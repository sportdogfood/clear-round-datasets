{
  "version": "v1.0",
  "lane": "batch_locale",
  "dirs": {
    "items_root": "items/locale",
    "path_template": "items/locale/{city_uid}/",
    "filenames": { "curated": "locale.json", "review": "locale_review_queue.json" },
    "filename_equals_uid": false
  },
  "policy": { "https_only": true, "idempotent_commits": true, "write_requires_summary": true },
  "schemas": {
    "input_city": { "city_uid": "string", "display_name": "string", "center": { "lat": "number", "lng": "number" }, "timezone": "string" },
    "input_batch": { "cities": "array", "commit": { "enabled": "string" }, "concurrency": "number" },
    "output_city": { "city_uid": "string", "paths": { "curated": "string", "review": "string" }, "status": "string", "reason": "string|null" },
    "output_batch": { "status": "string", "summary": { "cities_in": "number", "cities_ok": "number", "cities_failed": "number" }, "cities": "array" }
  },
  "defaults": {
    "distance": { "walkable_m": 800, "short_drive_m": 6000 },
    "batch": { "concurrency": 6, "max_cities": 100, "stop_on_error": "n" }
  },
  "commit": {
    "stash": { "folder": "items/locale/{city_uid}/", "filenames": { "curated": "locale.json", "review": "locale_review_queue.json" } },
    "write": { "enabled": "n", "message_tmpl": "feat(locale): build {city_uid} locale" }
  },
  "created": "2025-09-15T00:00:00Z",
  "last_updated": "2025-09-15T00:00:00Z"
}
