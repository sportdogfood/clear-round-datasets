            "type": "string"
          },
          "collection_title": {
            "type": "string"
          },
          "base_key": {
            "type": "string"
          },
          "span_start_date": {
            "type": "string"
          },
          "span_end_date": {
            "type": "string"
          },
          "span_season": {
            "type": "string"
          },
          "span_season_city_slug": {
            "type": "string"
          },
          "span_rating": {
            "type": "string"
          },
          "zoom_leg_index": {
            "type": "integer"
          },
          "zoom_leg_key": {
            "type": "string"
          },
          "zoom_leg_name": {
            "type": "string"
          },
          "zoom_season": {
