        "type": "string"
      },
      "zoom_season": {
        "type": "string"
      },
      "zoom_season_city_slug": {
        "type": "string"
      },
      "zoom_rating": {
        "type": "string"
      },
      "active_leg_count": {
        "type": "integer"
      },
      "collection_primary": {
