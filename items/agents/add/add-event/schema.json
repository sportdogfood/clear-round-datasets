{
  "agent": "add-event",
  "version": "v1",
  "purpose": "Create an event hub and, when the official schedule spans multiple weeks, generate weekly legs fully inside the hub window (hub + legs; no separate series entity).",
  "inputs": {
    "required": ["user_input_event_link"],
    "optional": [
      "is_series",
      "user_input_event_start_date",
      "user_input_event_end_date",
      "user_input_leg_count",
      "venue_uid",
      "organizer_uid",
      "label_uids",
      "description",
      "notes"
    ],
    "types": {
      "user_input_event_link": "https-url",
      "is_series": "enum[y,n]",
      "user_input_event_start_date": "date(YYYY-MM-DD)",
      "user_input_event_end_date": "date(YYYY-MM-DD)",
      "user_input_leg_count": "integer",
      "venue_uid": "uid(-venue)",
      "organizer_uid": "uid",
      "label_uids": "array[uid]",
      "description": "string",
      "notes": "string"
    }
  },
  "validations": {
    "https_only": ["user_input_event_link"],
    "derive_official_facts": [
      "Extract canonical event title from the official site; sanitize per event-rules; never trust user-provided name.",
      "Confirm start/end dates from the official schedule or federation; never trust hint dates for UID."
    ],
    "date_order": ["event_official_start_date", "event_official_end_date"],
    "hub_uid_rule": "slug(sanitized_official_name)-YYYY-MM",
    "leg_uid_rule": "slug(sanitized_official_name)-YYYY-MM-DD",
    "hub_vs_legs": [
      "Legs must sit fully inside hub window",
      "No overlaps",
      "Consistent labels: Week 1..N"
    ],
    "relations": [
      "venue_uid ends with -venue and resolves",
      "organizer_uid resolves",
      "label_uids (if provided) exist"
    ],
    "sources": [
      "Create/link source_uids per domain (domain-with-dashes + '-src'); de-duplicate by domain."
    ],
    "leg_confirmation": {
      "confirm_each_leg_dates": true,
      "allow_inferred_weeks": false,
      "hub_span_rule": "first_confirmed_leg_start_to_last_confirmed_leg_end",
      "lane_escalations": { "leg_count_mismatch": "red", "date_shift_after_preview": "red" }
    }
  },
  "outputs": {
    "preview": {
      "type": "PREVIEW",
      "lane": "yellow",
      "writes": [
        {
          "op": "add|update",
          "path": "index/events/<event_uid>.json",
          "payload": "full event JSON (hub; plus legs when present)"
        }
      ],
      "notes": ["unresolved relations or assumptions"]
    },
    "commit": {
      "endpoint": "https://crt-b1434e13de34.herokuapp.com/items/commit",
      "body": {
        "path": "index/events/<event_uid>.json",
        "json": "{...full payload...}",
        "message": "feat(events): add <event_uid> (actor: agent)"
      }
    }
  },
  "lanes": {
    "default": "yellow",
    "red_triggers": [
      "Shifting hub or leg dates after creation",
      "Changing sanitized official_name after creation"
    ],
    "green_triggers": [
      "Editorial-only updates (description, label_uids)"
    ]
  },
  "dependencies": [
    "event-rules.json",
    "venue-rules.json",
    "validation-checklist.txt",
    "permissions-policy.txt"
  ]
}
