{
  "version": "1.0",
  "section": "dine",
  "paths": {
    "meta": "/shows/{show_uid}/events/meta.json",
    "research_save": "/shows/{show_uid}/research/section-dine-{yyyymm}.json",
    "draft_save": "/drafts/section-dine-{slug}_{yyyymm}.json",
    "schema": "/config/schemas/section_output.schema.json"
  },
  "scope": {
    "radius_minutes": 20,
    "items_required": { "min": 12, "max": 15 },
    "categories": ["breakfast", "coffee", "lunch", "dinner"],
    "fast_early_min": 3,
    "earliest_open_time": "06:30"
  },
  "source_order": [
    "organizer_event",
    "venue_authority",
    "operator_official",
    "listing_corroboration_only"
  ],
  "required_item_fields": [
    "name","type","distance_miles","drive_time_min","address","hours","price_range","link","source_url"
  ],
  "optional_item_fields": [
    "phone","notes","category"
  ],
  "normalization": {
    "state": "USPS",
    "airports": "IATA",
    "phone_format": "E.164_US",
    "coords": "WGS84_decimal_5dp",
    "distance_units": "miles_0.1",
    "drive_time_rounding_min": 5,
    "price_allowed": ["$","$$","$$$"]
  },
  "distance_time_rules": {
    "origin": "venue_coords_from_meta",
    "if_no_coords": "set_null_and_note_or_use_operator_directions_if_precise"
  },
  "classification": {
    "type_values": ["cafe","coffee","bakery","deli","fast_casual","restaurant","food_truck","market","other"],
    "category_enforce": true
  },
  "quality_gates": {
    "radius_enforced": true,
    "category_coverage_enforced": true,
    "fast_early_enforced": true,
    "every_item_has_source_url": true,
    "no_empty_strings": true,
    "updated_on_tz": "America/New_York"
  },
  "output_defaults": {
    "section": "dine",
    "heading": "Dine: Reliable Eats, No Guesswork",
    "paragraphs": [],
    "facts": null,
    "bullets": [],
    "callouts": [],
    "seo": { "meta_title": null, "meta_description": null, "keywords": [], "internal_links": [] }
  },
  "notes_policy": {
    "conflicts": "Prefer most authoritative; record unresolved diffs.",
    "missing_required": "Set null and add concise note."
  }
}
