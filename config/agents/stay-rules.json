{
  "version": "1.0",
  "section": "stay",
  "paths": {
    "meta": "/shows/{show_uid}/events/meta.json",
    "research_save": "/shows/{show_uid}/research/section-stay-{yyyymm}.json",
    "draft_save": "/drafts/section-stay-{slug}_{yyyymm}.json",
    "schema": "/config/schemas/section_output.schema.json"
  },
  "scope": {
    "radius_minutes": 20,
    "items_required": { "min": 6, "max": 8 },
    "mix": { "hotels_min": 3, "rentals_min": 2, "budget_min": 1 }
  },
  "source_order": [
    "organizer_event",
    "venue_authority",
    "operator_official",
    "listing_corroboration_only"
  ],
  "required_item_fields": [
    "name",
    "type",
    "distance_miles",
    "drive_time_min",
    "address",
    "link",
    "source_url"
  ],
  "optional_item_fields": [
    "phone",
    "parking",
    "cancellation_policy",
    "loyalty_program",
    "price_range",
    "notes",
    "category",
    "hours"
  ],
  "normalization": {
    "state": "USPS",
    "airports": "IATA",
    "phone_format": "E.164_US",
    "coords": "WGS84_decimal_5dp",
    "distance_units": "miles_0.1",
    "drive_time_rounding_min": 5,
    "price_allowed": ["$", "$$", "$$$"]
  },
  "distance_time_rules": {
    "origin": "venue_coords_from_meta",
    "if_no_coords": "set_null_and_note_or_use_operator_directions_if_precise"
  },
  "classification": {
    "type_values": ["hotel", "rental", "inn", "motel", "suite", "other"],
    "budget_heuristics": {
      "by_price_range": ["$"],
      "by_keywords": ["inn", "motel", "express", "select"],
      "note": "Use operator facts; do not infer nightly rates."
    }
  },
  "quality_gates": {
    "mix_enforced": true,
    "radius_enforced": true,
    "every_item_has_source_url": true,
    "no_empty_strings": true,
    "updated_on_tz": "America/New_York"
  },
  "output_defaults": {
    "section": "stay",
    "heading": "Stay: Sleep Close, Sleep Right",
    "paragraphs": [],
    "facts": null,
    "bullets": [],
    "callouts": [],
    "seo": { "meta_title": null, "meta_description": null, "keywords": [], "internal_links": [] }
  },
  "delivery": {
    "mode": "inline_and_file",
    "file": {
      "path_template": "/shows/{show_uid}/research/section-{section}-{yyyymm}.json",
      "download_name_template": "section-{section}-{show_uid}_{yyyymm}.json",
      "mime_type": "application/json",
      "attach_in_response": true,
      "attachment_key": "attachment",
      "include_data_url": true,
      "data_url_key": "download_url"
    }
  },
  "notes_policy": {
    "conflicts": "Prefer most authoritative; record unresolved diffs.",
    "missing_required": "Set null and add concise note.",
    "coords_method": "If estimated or from operator map, note method."
  }
}
