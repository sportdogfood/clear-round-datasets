{
  "version": "1.0",
  "section": "extras",
  "paths": {
    "meta": "/shows/{show_uid}/events/meta.json",
    "research_save": "/shows/{show_uid}/research/section-extras-{yyyymm}.json",
    "draft_save": "/drafts/section-extras-{slug}_{yyyymm}.json",
    "schema": "/config/schemas/section_output.schema.json"
  },
  "scope": {
    "radius_minutes": 30,
    "items_required": { "min": 8, "max": 12 },
    "categories": ["beach","parks","museums","tours","shopping"],
    "family_friendly_bias": true
  },
  "source_order": [
    "organizer_event",
    "venue_authority",
    "operator_official",
    "listing_corroboration_only"
  ],
  "required_item_fields": [
    "name","type","distance_miles","drive_time_min","address","hours","link","source_url"
  ],
  "optional_item_fields": [
    "price_range","notes","category","phone"
  ],
  "normalization": {
    "state": "USPS",
    "airports": "IATA",
    "phone_format": "E.164_US",
    "coords": "WGS84_decimal_5dp",
    "distance_units": "miles_0.1",
    "drive_time_rounding_min": 5
  },
  "distance_time_rules": {
    "origin": "venue_coords_from_meta",
    "if_no_coords": "set_null_and_note_or_use_operator_directions_if_precise"
  },
  "classification": {
    "type_values": ["beach","park","museum","tour","shopping","outdoor","other"],
    "category_enforce": true
  },
  "quality_gates": {
    "radius_enforced": true,
    "category_spread_expected": true,
    "every_item_has_source_url": true,
    "no_empty_strings": true,
    "updated_on_tz": "America/New_York"
  },
  "output_defaults": {
    "section": "extras",
    "heading": "Off-Course Extras",
    "paragraphs": [],
    "facts": null,
    "bullets": [],
    "callouts": [],
    "seo": { "meta_title": null, "meta_description": null, "keywords": [], "internal_links": [] }
  },
  "notes_policy": {
    "conflicts": "Prefer most authoritative; record unresolved diffs.",
    "missing_required": "Set null and add concise note."
  }
}
